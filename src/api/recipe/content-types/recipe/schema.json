{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "singularName": "recipe",
    "pluralName": "recipes",
    "displayName": "Recipe",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "Notes": {
      "type": "text"
    },
    "Ingredients": {
      "type": "component",
      "repeatable": true,
      "component": "ingredients.ingredient-list"
    },
    "Media": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "Tags": {
      "displayName": "Tags",
      "type": "component",
      "repeatable": true,
      "component": "tags.tags"
    },
    "Method": {
      "type": "richtext"
    },
    "Locations": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::location.location",
      "inversedBy": "recipes"
    },
    "Allergens": {
      "type": "component",
      "repeatable": false,
      "component": "allergens.allergens"
    }
  }
}
